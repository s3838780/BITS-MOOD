<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/txt_date"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="363dp"
        android:layout_height="164dp"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="128dp"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <EditText
        android:id="@+id/txt_dotomorrow"
        android:layout_width="363dp"
        android:layout_height="41dp"
        android:ems="10"
        android:hint="What do you hope to do tomorrow?"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="446dp" />

    <EditText
        android:id="@+id/txt_eattoday"
        android:layout_width="363dp"
        android:layout_height="41dp"
        android:ems="10"
        android:hint="What did you eat today?"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="382dp" />

    <EditText
        android:id="@+id/txt_finishtoday"
        android:layout_width="363dp"
        android:layout_height="41dp"
        android:ems="10"
        android:hint="What did you finish today?"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="316dp" />

    <EditText
        android:id="@+id/txt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Insert Date"
        android:inputType="date"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="572dp" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        tools:layout_editor_absoluteX="284dp"
        tools:layout_editor_absoluteY="571dp" />

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="263dp"
        android:layout_height="58dp"
        android:text="Journal - Questions"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="56dp" />

</androidx.constraintlayout.widget.ConstraintLayout>